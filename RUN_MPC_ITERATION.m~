function RUN_MPC_ITERATION()
    
    global DATA

    x0 = DATA.X_curr(7:9);
    u0 = DATA.U_hori;
    options = optimoptions('fmincon','MaxFunctionEvaluations',500);
    DATA.U_hori = fmincon(@(u)nonl_cf(x0,u, SIM.waypoint), u0, [], [], [], [], [], [], @(u)nonl_bound_func(x0,u, SIM.ulim,false), options);
    DATA.Uin = DATA.U_hori(1:2);

end